@{
    Layout = "";
}
@model Nop.Plugin.Widgets.RecentPurchases.Models.ConfigurationModel
@using Nop.Web.Framework;

@Html.Action("StoreScopeConfiguration", "Setting", new { area = "Admin" })

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                @T("Plugins.Widgets.RecentPurchases.Instructions")              
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-body">
                @T("Plugins.Widgets.RecentPurchases.Note")
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.OverrideStoreCheckboxFor(model => model.WindowSize_OverrideForStore, model => model.WindowSize, Model.ActiveStoreScopeConfiguration)
                        @Html.NopLabelFor(model => model.WindowSize)
                    </div>
                    <div class="col-md-9">
                        @Html.NopEditorFor(model => model.WindowSize)
                        @Html.ValidationMessageFor(model => model.WindowSize)
                    </div>
                </div>                
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.OverrideStoreCheckboxFor(model => model.WindowTypeId_OverrideForStore, model => model.WindowTypeId, Model.ActiveStoreScopeConfiguration)
                        @Html.NopLabelFor(model => model.WindowTypeId)
                    </div>
                    <div class="col-md-9">
                        @Html.NopDropDownListFor(model => model.WindowTypeId, Model.AvailableWindowTypes)
                        @Html.ValidationMessageFor(model => model.WindowTypeId)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.NopLabelFor(model => model.ZoneId)
                    </div>
                    <div class="col-md-9">
                        @Html.NopDropDownListFor(model => model.ZoneId, Model.AvailableZones)
                        @Html.ValidationMessageFor(model => model.ZoneId)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.OverrideStoreCheckboxFor(model => model.ShowProductImage_OverrideForStore, model => model.ShowProductImage, Model.ActiveStoreScopeConfiguration)
                        @Html.NopLabelFor(model => model.ShowProductImage)
                    </div>
                    <div class="col-md-9">
                        @Html.NopEditorFor(model => model.ShowProductImage)
                        @Html.ValidationMessageFor(model => model.ShowProductImage)
                    </div>
                </div> 
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.OverrideStoreCheckboxFor(model => model.ShowQuantity_OverrideForStore, model => model.ShowQuantity, Model.ActiveStoreScopeConfiguration)
                        @Html.NopLabelFor(model => model.ShowQuantity)
                    </div>
                    <div class="col-md-9">
                        @Html.NopEditorFor(model => model.ShowQuantity)
                        @Html.ValidationMessageFor(model => model.ShowQuantity)
                    </div>
                </div> 
                <div class="form-group">
                    <div class="col-md-3">
                        &nbsp;
                    </div>
                    <div class="col-md-9">
                        <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}